<h1> HOTELS INDEX PAGE </h1>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="search-per-city">
        <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
          <div class="search-per-city form-group">
            <input class="form-control rounded" type="search" name="search[query]" id="search_query" />
            <span class="input-group-text border-0" id="search-addon">
              <i class="fas fa-search"></i>
            </span>
          </div>
        </form>
      </div>
      <div class="occupancy-selector">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <% @hotels.each do |hotel| %>
        <div class="row">
          <div class="card-hotel col-12">
            <div class="d-flex align-items-center">
            <div class="row hotel-cards">
                <div class="hotel-image col-4">
                  <img src="https://images.unsplash.com/photo-1615571022219-eb45cf7faa9d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" class="card-img-top" alt="...">
                </div>
                <div class="hotel-attributes col-8">
                  <h5 class="card-title"><%= hotel.name %></h5>
                 <% hotel.rating.times do %>
                  <i class="fa fa-star rating-color"></i>
                 <% end %>
                  <span class="hotel-rating-text"> Hotel </span>
                  <p class="card-text"><%= hotel.address%></p>
                  <p class="card-text"><%= hotel.rating%></p>
                </div>
                <div class="hotel-booking">
                  <%= link_to "Book now", hotels_path(@hotel), class: "btn btn-flat" %>
                </div>
              </div>
            </div>
          </div>
        </div>
       <% end %>
    </div>
    <div class="col-md-5">
      <div class="mapouter"><div class="gmap_canvas"><iframe width="583" height="822" id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com"></a><br><style>.mapouter{position:relative;text-align:right;height:822px;width:583px;}</style><a href="https://www.embedgooglemap.net"></a><style>.gmap_canvas {overflow:hidden;background:none!important;height:822px;width:583px;}</style></div></div>
    <div>
  </div>
</div>
