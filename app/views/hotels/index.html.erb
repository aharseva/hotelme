
<div class="container">
<h1> Find The Best Hotel Deals </h1>
  <div>
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
        </div>
  </div>
<% end %>



  <div class="row index-page">
    <div class="col-md-7">
      <% @hotels.each do |hotel| %>
        <div class="row">
          <div class="card-hotel col-12">
            <div class="d-flex align-items-center">
            <div class="row hotel-cards">
                <div class="hotel-image col-4">
                  <%  if hotel.photos.attached?%> 
                   <%= cl_image_tag hotel.photos.first.key, width: 400, height: 260, crop: :fill %>
                   <% else %>
                     <%=  image_tag('hotel_profile.jpg') %>
                  <% end %>
                </div>
                <div class="hotel-attributes col-4">
                  <h5 class="card-title"><%= hotel.name %></h5>
                    <% if hotel.rating %>
                      <% hotel.rating.times do %>
                        <i class="fa fa-star rating-color"></i>
                      <% end %>
                      <span class="hotel-rating-text"> Hotel </span>
                    <% else  %>
                      <span class="hotel-rating-text"> No Rating </span>
                    <% end %>
                  <p class="card-text"><%= hotel.address%></p>
                </div>
                <div class="hotel-booking col-4">
                  <%= link_to "Book now", hotel_path(hotel), class: "btn btn-flat" %>
                </div>
              </div>
            </div>
          </div>
        </div>
       <% end %>
    </div>
    <div class="col-md-5">
    <div style="width: 100%; height: 100%;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <div>
  </div>
</div>
